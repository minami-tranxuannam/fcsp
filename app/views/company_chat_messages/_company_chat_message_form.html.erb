<%= simple_form_for new_message, remote: true do |f| %>
  <%= f.text_area :content, rows: 4 %>
  <%= f.hidden_field :company_chat_room_id %>
  <%= f.hidden_field :senderable %>
  <%= f.hidden_field :receiverable %>
  <%= submit_tag "Reply", class: "button button-3d button-large button-rounded button-green" %>
<% end %>
